<%
    const menuCardData = typeof menuCard !== 'undefined' ? menuCard : {
        name: 'メニュー名',
        description: 'メニューの説明が入ります',
        time: '60分',
        price: '5,000円',
        image: 'https://picsum.photos/800/600?random=30',
        link: '/salon/menu/'
    };
%>
<div class="menuCard">
    <% if (menuCardData.image) { %>
        <div class="menuCard__image">
            <a class="menuCard__imageLink" href="<%= menuCardData.link %>">
                <img class="menuCard__imageImg" src="<%= menuCardData.image %>" alt="<%= menuCardData.name %>" loading="lazy" onerror="this.onerror=null; this.src='https://via.placeholder.com/800x600/667eea/ffffff?text=' + encodeURIComponent('<%= menuCardData.name %>');" />
            </a>
        </div>
    <% } %>
    <div class="menuCard__content">
        <h3 class="menuCard__name">
            <a class="menuCard__nameLink" href="<%= menuCardData.link %>"><%= menuCardData.name %></a>
        </h3>
        <% if (menuCardData.description) { %>
            <p class="menuCard__description"><%= menuCardData.description %></p>
        <% } %>
        <div class="menuCard__info">
            <% if (menuCardData.time) { %>
                <span class="menuCard__time"><%= menuCardData.time %></span>
            <% } %>
            <% if (menuCardData.price) { %>
                <span class="menuCard__price"><%= menuCardData.price %><small class="menuCard__priceUnit">（税込）</small></span>
            <% } %>
        </div>
    </div>
</div>

