<%
    const heroData = typeof hero !== 'undefined' ? hero : {
        catchcopy: '都町でゆったり、隠れ家サロン',
        subtitle: 'あなただけの特別な時間を',
        image: '/images/salon/hero_top.png',
        imageSp: '/images/salon/hero_top.png',
        reservationButtons: {
            line: 'https://line.me/R/ti/p/@salon',
            web: '/salon/reserve/',
            tel: 'tel:00-0000-0000'
        }
    };
%>
<section class="salonHero">
    <div class="salonHero__bg">
        <picture class="salonHero__image">
            <source media="(max-width: 768px)" srcset="<%= heroData.imageSp || heroData.image %>" />
            <img class="salonHero__imageImg" src="<%= heroData.image %>" alt="サロンイメージ" loading="eager" onerror="this.onerror=null; this.src='https://via.placeholder.com/1920x1080/667eea/ffffff?text=Salon+Hero';" />
        </picture>
    </div>
    <div class="salonHero__inner container">
        <div class="salonHero__content">
            <h1 class="salonHero__catchcopy"><%= heroData.catchcopy %></h1>
            <% if (heroData.subtitle) { %>
                <p class="salonHero__subtitle"><%= heroData.subtitle %></p>
            <% } %>
            <div class="salonHero__buttons">
                <a class="uiButton uiButton_type_line uiButton_size_lg" href="<%= heroData.reservationButtons.line %>" target="_blank" rel="noopener noreferrer">
                    <span class="uiButton__icon">LINE</span>
                    <span class="uiButton__text">LINE予約</span>
                </a>
                <a class="uiButton uiButton_type_primary uiButton_size_lg" href="<%= heroData.reservationButtons.web %>">
                    <span class="uiButton__icon">WEB</span>
                    <span class="uiButton__text">Web予約</span>
                </a>
                <a class="uiButton uiButton_type_tel uiButton_size_lg" href="<%= heroData.reservationButtons.tel %>">
                    <span class="uiButton__icon">TEL</span>
                    <span class="uiButton__text">電話予約</span>
                </a>
            </div>
        </div>
    </div>
</section>

