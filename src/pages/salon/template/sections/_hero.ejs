<% 
    const heroData = typeof hero !== 'undefined' ? hero : {
        catchcopy: '都町でゆったり、隠れ家サロン',
        subtitle: 'あなただけの特別な時間を',
        image: 'https://images.unsplash.com/photo-1560066984-138dadb4c035?auto=format&w=1920&h=1080&fit=crop&q=80',
        imageSp: 'https://images.unsplash.com/photo-1560066984-138dadb4c035?auto=format&w=768&h=1024&fit=crop&q=80',
        reservationButtons: {
            line: 'https://line.me/R/ti/p/@salon',
            web: '/salon/reserve/',
            tel: 'tel:00-0000-0000'
        }
    };
%>
<section class="salonHero">
    <div class="salonHero__bg">
        <picture class="salonHero__image">
            <source media="(max-width: 768px)" srcset="<%= heroData.imageSp || heroData.image %>" />
            <img class="salonHero__imageImg" src="<%= heroData.image %>" alt="サロンイメージ" loading="eager" onerror="this.onerror=null; this.src='https://picsum.photos/1920/1080?random=1';" />
        </picture>
    </div>
    <div class="salonHero__inner container">
        <div class="salonHero__content">
            <h1 class="salonHero__catchcopy"><%= heroData.catchcopy %></h1>
            <% if (heroData.subtitle) { %>
                <p class="salonHero__subtitle"><%= heroData.subtitle %></p>
            <% } %>
            <div class="salonHero__buttons">
                <a class="reservationButton reservationButton_type_line" href="<%= heroData.reservationButtons.line %>" target="_blank" rel="noopener noreferrer">
                    <span class="reservationButton__icon">LINE</span>
                    <span class="reservationButton__text">LINE予約</span>
                </a>
                <a class="reservationButton reservationButton_type_web" href="<%= heroData.reservationButtons.web %>">
                    <span class="reservationButton__icon">WEB</span>
                    <span class="reservationButton__text">Web予約</span>
                </a>
                <a class="reservationButton reservationButton_type_tel" href="<%= heroData.reservationButtons.tel %>">
                    <span class="reservationButton__icon">TEL</span>
                    <span class="reservationButton__text">電話予約</span>
                </a>
            </div>
        </div>
    </div>
</section>

