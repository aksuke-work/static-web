<%- include('./template/_header', {
    meta: {
        title: 'TOP',
        description: '都町でゆったり、隠れ家サロン。あなただけの特別な時間を',
        siteType: 'website',
        url: '',
    }
}) %>
<div id="page-transition-overlay" class="page-transition-overlay"></div>
<main class="salonMain salonMain_type_top">
    <section class="salonHero">
        <div class="salonHero__visual">
            <div class="salonHero__imageWrapper">
                <img class="salonHero__image" src="/images/salon/hero_top.png" alt="Lumière Salon" loading="eager" />
            </div>
        </div>
        <div class="salonHero__content">
            <div class="salonHero__textWrapper">
                <h1 class="salonHero__catchcopy">
                    <span class="salonHero__revealText"><span>Timeless</span></span>
                    <span class="salonHero__revealText"><span>Elegance</span></span>
                </h1>
                <p class="salonHero__subtitle">
                    静寂と美意識が交差する、<br>
                    あなただけのサンクチュアリ。
                </p>
            </div>
        </div>
        <div class="salonHero__scrollIndicator">
            <span class="salonHero__scrollText">Scroll</span>
            <span class="salonHero__scrollLine"></span>
        </div>
    </section>

    <section class="salonConcept">
        <div class="container">
            <div class="salonConcept__inner">
                <div class="salonConcept__image fadein">
                    <img src="https://picsum.photos/800/1000?random=1" alt="Concept Image" loading="lazy">
                </div>
                <div class="salonConcept__content fadein delay-200">
                    <h2 class="salonConcept__title uiHeading uiHeading_level_h2">Concept</h2>
                    <p class="salonConcept__lead">静寂と美意識が<br>交差する場所</p>
                    <p class="salonConcept__text">
                        都心の喧騒から離れた、静かな隠れ家。<br>
                        そこは、あなた本来の美しさを引き出すための<br>
                        特別なサンクチュアリです。
                    </p>
                    <p class="salonConcept__text">
                        一人ひとりの骨格や髪質、<br>
                        そしてライフスタイルに寄り添い、<br>
                        「あなたらしさ」を最大限に輝かせるスタイルを<br>
                        ご提案いたします。
                    </p>
                    <div class="salonConcept__button">
                        <a class="uiButton uiButton_type_link" href="/salon/about/">
                            <span class="uiButton__text">Read More</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="salonMenu">
        <div class="container">
            <div class="salonMenu__header fadein">
                <div>
                   <h2 class="salonMenu__title uiHeading uiHeading_level_h2">Menu</h2>
                   <p class="salonMenu__subtitle">Selected Treatments</p>
                </div>
                <div class="salonMenu__button">
                    <a class="uiButton uiButton_type_outline" href="/salon/menu/">
                        <span class="uiButton__text">View All Menu</span>
                    </a>
                </div>
            </div>
            
            <div class="salonMenu__grid">
                <!-- Grid Item 1 (Left Large) -->
                <div class="salonMenu__item fadein delay-100">
                    <a href="/salon/menu/#cut" class="salonMenu__link">
                        <div class="salonMenu__imageWrapper">
                            <img src="https://picsum.photos/800/1000?random=10" alt="Cut" class="salonMenu__image">
                            <span class="salonMenu__viewMore">View Detail</span>
                        </div>
                        <div class="salonMenu__info">
                            <span class="salonMenu__category">Hair Cut</span>
                            <h3 class="salonMenu__name">Design Cut</h3>
                            <p class="salonMenu__price">¥6,600〜</p>
                        </div>
                    </a>
                </div>

                <!-- Grid Item 2 (Right Normal) -->
                <div class="salonMenu__item fadein delay-200">
                    <a href="/salon/menu/#color" class="salonMenu__link">
                        <div class="salonMenu__imageWrapper">
                            <img src="https://picsum.photos/600/800?random=11" alt="Color" class="salonMenu__image">
                            <span class="salonMenu__viewMore">View Detail</span>
                        </div>
                        <div class="salonMenu__info">
                            <span class="salonMenu__category">Hair Color</span>
                            <h3 class="salonMenu__name">Premium Color</h3>
                            <p class="salonMenu__price">¥8,800〜</p>
                        </div>
                    </a>
                </div>

                <!-- Grid Item 3 (Middle Overlap) -->
                <div class="salonMenu__item fadein delay-300">
                    <a href="/salon/menu/#spa" class="salonMenu__link">
                        <div class="salonMenu__imageWrapper">
                            <img src="https://picsum.photos/600/800?random=12" alt="Head Spa" class="salonMenu__image">
                            <span class="salonMenu__viewMore">View Detail</span>
                        </div>
                        <div class="salonMenu__info">
                            <span class="salonMenu__category">Relaxation</span>
                            <h3 class="salonMenu__name">Head Spa</h3>
                            <p class="salonMenu__price">¥4,400〜</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="salonNews">
        <div class="container">
            <div class="salonNews__inner">
                <div class="salonNews__header fadein">
                    <h2 class="salonNews__title uiHeading uiHeading_level_h2">News</h2>
                </div>
                <div class="salonNews__content fadein delay-200">
                    <ul class="salonNews__list">
                        <li class="salonNews__item">
                            <a class="salonNews__link" href="#">
                                <time class="salonNews__date" datetime="2025-01-15">2025.01.15</time>
                                <span class="salonNews__category">Info</span>
                                <h3 class="salonNews__articleTitle">新年の営業時間について</h3>
                                <span class="salonNews__arrow">→</span>
                            </a>
                        </li>
                        <li class="salonNews__item">
                            <a class="salonNews__link" href="#">
                                <time class="salonNews__date" datetime="2025-01-10">2025.01.10</time>
                                <span class="salonNews__category">Campaign</span>
                                <h3 class="salonNews__articleTitle">初回限定キャンペーン実施中</h3>
                                <span class="salonNews__arrow">→</span>
                            </a>
                        </li>
                        <li class="salonNews__item">
                            <a class="salonNews__link" href="#">
                                <time class="salonNews__date" datetime="2025-01-05">2025.01.05</time>
                                <span class="salonNews__category">Info</span>
                                <h3 class="salonNews__articleTitle">新スタッフ入店のお知らせ</h3>
                                <span class="salonNews__arrow">→</span>
                            </a>
                        </li>
                    </ul>
                    <div class="salonNews__button">
                        <a class="uiButton uiButton_type_link" href="/salon/news/">
                            <span class="uiButton__text">View All News</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="salonAccess">
        <div class="salonAccess__bg">
            <img src="https://picsum.photos/1920/1080?random=20" alt="Access Background" loading="lazy">
        </div>
        <div class="salonAccess__content fadein">
            <div class="container">
                <div class="salonAccess__box">
                    <h2 class="salonAccess__title uiHeading uiHeading_level_h2">Access</h2>
                    <p class="salonAccess__address">
                        <%- typeof config !== 'undefined' && config.salon && config.salon.address ? config.salon.address.replace(/ /g, '<br>') : '〒000-0000<br>東京都港区南青山3-1-1' %>
                    </p>
                    <div class="salonAccess__info">
                        <p>Open: 10:00 - 20:00</p>
                        <p>Close: Tuesday</p>
                        <p>Tel: 03-1234-5678</p>
                    </div>
                    <div>
                        <a class="salonAccess__link" href="/salon/about/#access">
                            View on Google Maps
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<%- include('./template/_footer', {
    scripts: []
}) %>
